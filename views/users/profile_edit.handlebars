                {{/noteq}}
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="myLook">My Look</label>
          <select class="form-control" name="myLook">
            {{#if profile.myLook }}
            {{else}}
              <option selected="selected"></option>
            {{/if}}
            {{#each profileConfig.myLook}}
                {{#eq this ../profile.myLook }}
                  <option selected="selected">{{this}}</option>
                {{/eq}}
                {{#noteq this ../profile.myLook  }}
                  <option>{{this}}</option>
                {{/noteq}}
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="relationshipStatus">Relationship Status</label>
          <select class="form-control" name="relationshipStatus">
            {{#if profile.relationshipStatus }}
            {{else}}
